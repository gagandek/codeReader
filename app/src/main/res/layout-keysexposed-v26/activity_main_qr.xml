<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityQRStripped"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/id_searchbutton_art3"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="searchPatientInDb"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89"
        app:maxImageSize="30dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:useCompatPadding="false"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/id_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/unique_id"
        android:inputType="number"
        android:maxLength="@integer/id_length"
        android:imeOptions="actionDone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <SurfaceView
        android:id="@+id/camera_preview"
        android:layout_width="333dp"
        android:layout_height="384dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="112dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/id_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>